<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/txt_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="10dp"
        android:text=""
        android:textSize="20sp" />

    <Button
        android:id="@+id/mobile_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/idcard_number"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView1"
        android:text="查询" />

    <EditText
        android:id="@+id/idcard_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="28dp"
        android:layout_toLeftOf="@+id/mobile_search"
        android:ems="10"
        android:hint="手机号" >

        <requestFocus />
    </EditText>

    <ListView
        android:id="@+id/idcard_listview"
        android:layout_width="wrap_content"
        android:layout_height="291dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/mobile_search" >

    </ListView>

</RelativeLayout>